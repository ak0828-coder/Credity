{
  "name": "@credity/monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "engines": { "node": ">=20.0.0" },
  "workspaces": ["apps/*", "libs/*"],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "dev:fe": "pnpm --filter @credity/frontend dev",
    "dev:be": "pnpm --filter @credity/backend dev"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}